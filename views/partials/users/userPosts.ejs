<div class="row justify-content-start">
    <div class="col-11 px-0 " id="card-container">
      <% for(let post of foundUser.posts) {%>
      <div class="col-auto card mb-3 p-0 ">
        <div class="row g-0">
          <div class="col-md-2 col-4">
            <img src="<%=post.image.thumbnail%>" class="w-100 img-fluid rounded" alt="..." />
          </div>
          <div class="col-md-8 col-8">
            <div class="card-body py-0">
              <h5 class="card-title"><a href="/posts/<%=post.id%>"><%= post.title %></a></h5>
              <p class="card-text mb-0 crop-text-4lines"><%= post.body %></p>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>