<% layout('./layout/boilerplate') -%>
<div class="container-fluid mt-2">
  <div class="row">
    <div class="col-2 offset-1 border-end border-dark border-opacity-25">
      <ul class="nav flex-column">        
        <img class="img-fluid" src="<%= foundUser.avatar.thumbnail %> " alt="">
        <li class="nav-item my-1">
          <a class="nav-link d-inline" href="#">Posts</a>
        </li>
        <li class="nav-item my-1">
          <a class="nav-link d-inline" href="#">Followers </a> 
          <span class="badge rounded-pill text-bg-dark"><%= foundUser.followers.length %></span>
        </li>
        <li class="nav-item my-1">
          <a class="nav-link d-inline" href="#">Following</a>
          <span class="badge rounded-pill text-bg-dark"><%= foundUser.follows.length %></span>
        </li>        
        <li class="nav-item my-1">
          <a class="nav-link d-inline" href="#">Follow user</a>
        </li>        
      </ul>
    </div>
    <div class="col-8">
      <h1 ><%= foundUser.username %></h1>
      <p><%= foundUser.about %> </p>      
     

      <form action="/users/<%=foundUser.id%>?_method=PATCH" method="POST" enctype="multipart/form-data">
        <textarea class="form-control" name="about" id="about" rows="3" placeholder="about you"></textarea>        
        <label class="form-label mb-0 mt-1" for="image">Choose avaar image</label>
        <input class="form-control" type="file" name="image" id="image">
        <div class="row justify-content-end">    
          <div class="col-3">
              <button class="col-12 btn btn-sm btn-success mt-1 p-1">Change</button>
          </div>        
      </form>
    </div>
  </div>
</div>
