<% layout('./layout/boilerplate') -%>
<div class="container-fluid mt-2">
  <div class="row">
    <div class="col-2 offset-1 border-end border-dark border-opacity-25">
      <img class="p-2 img-fluid" src="<%= foundUser.avatar.thumbnail %> " alt="">

      <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist">
        <button class="nav-link  active" id="user-tab" data-bs-toggle="tab" data-bs-target="#user" type="button" role="tab">User</button>
        <button class="nav-link" id="posts-tab" data-bs-toggle="tab" data-bs-target="#posts" type="button" role="tab">Posts</button>
        <button class="nav-link px-1" id="followers-tab" data-bs-toggle="tab" data-bs-target="#followers" type="button" role="tab" >Followers <span class="badge rounded-pill text-bg-dark"><%= foundUser.followers.length %></span></button>        
        <button class="nav-link px-1" id="follows-tab" data-bs-toggle="tab" data-bs-target="#follows" type="button" role="tab" >Follows <span class="badge rounded-pill text-bg-dark"><%= foundUser.follows.length %></span></button>       
        
      </div>      
    </div>  
    <div class="col-8 ms-1">
      <div class="tab-content" id="v-pills-tabContent">        
        <div class="tab-pane  show active" id="user" role="tabpanel" tabindex="0"><%- include('../partials/users/userInfo',{foundUser}) %>  </div>
        <div class="tab-pane fade" id="posts" role="tabpanel" tabindex="0">SHOW POSTS</div>
        <div class="tab-pane fade" id="followers" role="tabpanel" tabindex="0">SHOW FOLLOWERS</div>        
        <div class="tab-pane fade" id="follows" role="tabpanel" tabindex="0">SHOW FOLLOWS</div>          
      </div>
    </div>
  </div>
</div>