          <a class="nav-link d-inline" href="#">Posts</a>
        </li>
        <li class="nav-item my-1">
          <a class="nav-link d-inline" href="#">Followers </a> 
          <span class="badge rounded-pill text-bg-dark"><%= foundUser.followers.length %></span>
