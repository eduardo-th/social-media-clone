<% layout('./layout/boilerplate') -%>
<div class="container-fluid mt-2">
  <div class="row">
    <div class="col-2 offset-1 border-end border-dark border-opacity-25">
      <ul class="nav flex-column">        
        <img class="img-fluid" src="https://res.cloudinary.com/dqfvb6su5/image/upload/c_crop,g_center,h_250,r_max,w_250/v1666646440/social-media/avatars/j44u534bvg0kfufbptqt.jpg" alt="">
